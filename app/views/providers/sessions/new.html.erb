<div class="d-flex justify-content-center align-items-center h-100">
  <div class="shadow-sm devise-form">
    <h2><%= title t(:provider_login, scope: [:devise, :titles]) %></h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false }, class:"mt-4" }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t(:login, scope: [:devise, :titles]), class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-4 links-container">
      <%= render "providers/shared/links" %>
    </div>
  </div>
</div>
