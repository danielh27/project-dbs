<div class="col">
  <div class="card service-card">
    <div class="card-image">
      <%= image_tag "https://source.unsplash.com/random/?avatar", class: "card-img-top" %>
    </div>
    <div class="card-body">
      <p class="card-text d-flex justify-content-between">
        <span><%= service.provider.business_name %></span>
        <span>#Category</span>
      </p>
      <p class="card-text card-description"><%= service.description %></p>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <span>#Review</span>
      <span class="card-price"><%= service.price %></span>
    </div>
  </div>
</div>
