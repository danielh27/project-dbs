<div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-3">
  <%= link_to path do  %>
    <div class="card service-card rounded-3">

      <%# Image Section %>
      <div class="card-image">
        <%= image_tag service_image, class: "card-img-top" %>
      </div>

      <%# Card Body Section %>
      <div class="card-body d-flex flex-column gap-2">
        <div class="card-text d-flex justify-content-between align-items-center">
          <%= render avatar_component %>
          <span>#Category</span>
        </div>
        <p class="card-text card-description"><%= description %></p>
      </div>

      <%# Footer Section (Price and Review Rating) %>
      <div class="card-footer d-flex justify-content-between">
        <div class="card-rating d-flex align-items-center gap-1">
          <%= image_tag start_icon_path %>
          <span class="card-rating-number fw-bold fs-6">4.5</span>
        </div>
        <span class="card-price"><%= price %></span>
      </div>

    </div>
  <% end %>
</div>
