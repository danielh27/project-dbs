<div data-search-message-target="chats">
  <% chats.each do |chat| %>
    <%# Now, requests are remote way, if you want to change it, set turbo: false %>
    <%= link_to service_chat_path(@service, chat),
                class: "chat-detail #{background_chat_list_item(@chat.id, chat.id)} text-decoration-none d-flex my-2 px-2 py-2 align-items-center chat-list-item" do %>

      <div class="me-3">
        <%= cl_image_tag chat.provider.avatar.key, class: "avatar-title-chat", alt: "avatar" %>
      </div>

      <div class="align-self-start flex-grow-1 overflow-hidden">
        <div class="text-dark fw-bold">
          <%= fullname(chat.provider) %>
        </div>

        <small class="fw-semibold">
          <%= chat&.messages&.last&.content.to_s %>
        </small>
      </div>

      <div class="align-self-start lh-1 ms-3">
        <span class="fw-semibold">3m</span>
      </div>
    <% end %>
  <% end %>
</div>
