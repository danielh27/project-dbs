<div class="chatroom"
     data-controller="chat-subscription"
     data-chat-subscription-chat-id-value="<%= chat.id %>"
     data-chat-subscription-current-user-id-value="<%= current_user.id %>"
     data-chat-subscription-provider-id-value="<%= chat.provider.id %>">

  <div class="d-flex justify-content-between align-items-center py-3 px-4 mx-2 mt-2 container-title-chat">
    <div class="d-flex justify-space-between align-items-center gap-2">
      <%= cl_image_tag chat.provider.avatar.key, class: "avatar-title-chat", alt: "avatar" %>
      <div class="ms-2 lh-sm">
        <span class="fw-bold h5 receiver-name"><%= chat.provider.business_name %></span>
        <div>
          <i class="fa-solid fa-circle circle-availability"></i>
          <small data-chat-subscription-target="providerStatus" class="text-secondary">
            Desconectado
          </small>
        </div>
      </div>
    </div>

    <div class="d-flex align-items-center gap-3">
      <div>
        <%= link_to '#', class: "btn-quote text-decoration-none d-flex align-items-center gap-2",
            data: { action: "turbo:click->chat-subscription#toggleQuotations" } do |l| %>
          <%= image_tag 'svg/chat/clipboard_text.svg', width: "22px", class: "d-inline" %>
          <span class="fw-bold d-none d-sm-block">Cotizaciones</span>
          <i class="fa-solid fa-chevron-right ms-1"></i>
        <% end %>
      </div>

      <div class="d-sm-none">
        <%= image_tag 'svg/chat/vertically_points', width: '24px' %>
      </div>
    </div>
  </div>

  <div class="messages text-break" data-chat-subscription-target="messages">
    <% previous_sender = nil %>
    <% chat.messages.each do |message| %>

      <% show_user_avatar = message.sender_id == previous_sender ? false : true %>
      <% previous_sender = message.sender_id %>

      <div class="message-row d-flex <%= set_class_name_by_message_sender(message.sender, current_user, 'justify-content-end', 'justify-content-start') %>">
        <div class="<%= set_class_name_by_message_sender(message.sender, current_user, "d-none", "avatar") %>">
          <% if show_user_avatar %>
            <%= render User::AvatarComponent.new(current_user, classes: 'avatar-message') %>
          <% end %>
        </div>

        <div class="<%= set_class_name_by_message_sender(message.sender, current_user, 'sender-style', 'receiver-style') %>">
          <%= render 'messages/message', message: message %>
        </div>

        <div class="<%= set_class_name_by_message_sender(message.sender, current_user, "avatar", "d-none") %>">
          <% if show_user_avatar %>
            <%= render User::AvatarComponent.new(current_user, classes: 'avatar-message') %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-new-message">
    <%= simple_form_for [service, chat, message],
        html: { data: { action: "turbo:submit-end->chat-subscription#resetForm" },
        class: "d-flex align-items-center justify-content-center gap-3",
        id: "new-chat-message"} do |f| %>

      <div class="d-flex align-items-center bg-white flex-grow-1">
        <%= f.input :content,
                    label: false,
                    placeholder: "Escribe un mensaje",
                    wrapper_html: { class: "d-flex align-items-center h-100 flex-grow-1" },
                    class: "mb-0" %>
        <%= f.button :button, id: "button-send-message", class: "h-100"  do %>
          <%= image_tag 'png/send_button.png', width: '24px' %>
        <% end %>
      </div>

      <%= link_to root_path, class: "d-flex align-items-center text-decoration-none new-quotation-button" do %>
        <i class="fa-solid fa-plus me-2 fw-bold fs-6"></i>
        <span class="fw-bold d-none d-md-block">Cotizaci√≥n</span>
      <% end %>
    <% end %>
  </div>
</div>
